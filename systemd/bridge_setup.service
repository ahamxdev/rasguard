[Unit]
Description=Run bridge_setup at Startup
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/bash /home/ahamxdev/rasguard/scripts/bridge_setup.sh
ExecStartPost=/bin/sleep 60 && /bin/bash /home/ahamxdev/rasguard/scripts/bridge_setup.sh
RemainAfterExit=yes
Restart=on-failure
RestartSec=5s
User=root

[Install]
WantedBy=multi-user.target
